% Jaku Adamczyk
%% Preparation
clear;
clc;
close all;

%% declaring local window
load MR_data;
localWindow = [5 5];

%% images
img1 = I_noisefree;
img2 = I_noisy1;
img3 = I_noisy2;
img4 = I_noisy3;
img5 = I_noisy4;

imgArray = [img1, img2, img3, img4, img5];
%% Convolutions
imgConvArray = imgArray;

for i = 1:5
    imgConvArray(i) = convolution(imgArray(i), localWindow);
end
%% Bilateral filter

imgBilateralArray = imgArray;

for i = 1:5
    imgBilateralArray(i) = bilateral(imgArray(i), local_window);
end

%% Show each image set
for i = 1:5
   figure;
   subplot(1,3,1);
   imshow(imgArray(i));
   imshow(imgConvArray(i));
   imshow(imgBilateralArray(i));
end
