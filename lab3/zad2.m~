%% Preparation
clearvars;
close all;
clc;

%% Wczytywanie
lena = imread('lena.bmp');
jet = imread('jet.bmp');

%% SUM
img_sum = imadd(lena, jet, 'uint16');

figure(1);
imshow(img_sum,[]);
title('Dodawanie');

%% LINEAR COMBINATION

figure(2);
imshow(imlincomb(1,img_lena,1,img_jet,'uint16'),[]);
title('Kombinacja Liniowa');


